<%= container do %>
  <h1>
    <%= @screen.name %>
    <small><%= link "#screen", to: screen_path(@conn, :index) %></small>
  </h1>
  <nav class="mb-2 d-flex flex-row justify-content-between align-items-baseline">
    <%= link "Edit", to: screen_path(@conn, :edit, @screen), class: "btn btn-primary" %>
    <h5>Used in journeys: â€¦</h5>
  </nav>
<% end %>

<section class="screen-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col col-12 col-sm-12 col-md-4">
        <pre><%= @screen.body %></pre>
      </div>
      <div class="col col-12 col-sm-6 col-md-4">
        <h2>Bootstrap 4</h2>
        <%= preview_in_iframe(@conn, @screen, "bootstrap4") %>
      </div>
      <div class="col col-12 col-sm-6 col-md-4">
        <h2>Bootstrap 3</h2>
        <%= preview_in_iframe(@conn, @screen, "bootstrap3") %>
      </div>
    </div>
  </div>
</section>
